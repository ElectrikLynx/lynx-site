---
import {
  HiGiftTop,
  HiFingerPrint,
  HiMiniFilm,
  HiComputerDesktop,
  HiCircleStack,
} from "react-icons/hi2";
import Paragraph from "@components/shared/Paragraph.astro";
import { Text } from "@components/shared";
import IconContainer from "./components/IconContainer.astro";

export interface Props {
  icon: string;
  title: string;
  description: string;
  included: Array<string>;
  price: string;
  styling?: string;
}

const icons: Record<string, IconType> = {
  fingerprint: HiFingerPrint,
  camera: HiMiniFilm,
  desktop: HiComputerDesktop,
  circlestack: HiCircleStack,
};

const { icon, title, description, included, price } = Astro.props;

const IconComponent = icons[icon] || HiGiftTop;
---

<div
  class="card-container min-h-full p-5 sm:p-6 lg:p-8 rounded-3xl border border-box-border bg-box-bg shadow-lg shadow-box-shadow relative overflow-hidden"
>
  <div class="flex justify-between">
    <IconContainer>
      <IconComponent size={24} />
    </IconContainer>

    <Text tag="p">
      ${price}
    </Text>
  </div>

  <h2 class="h-10 md:text-xl font-semibold text-heading-2 mt-6 mb-4">
    {title}
  </h2>

  <div class="text p-4">
    <Text tag="p">
      {description}
    </Text>
    <div class="features border-solid">
      {
        included.map((item) => {
          return (
            <li class="text-mlist-disc list-inside lg:text-sm text-gray-900 dark:text-white">{`${item}`}</li>
          );
        })
      }
    </div>
  </div>
  <div class="h-12 flex justify-center m-4"></div>
  <a href="">Select</a>

  <style>
    .features {
      padding-top: 6px;
      border-top: 1px solid rgba(255, 255, 255, 0.5);
    }
  </style>
</div>
