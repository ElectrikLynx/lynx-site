---
export interface Props {
  tag: string;
  className?: string;
}
interface StyleBank {
  [key: string]: string;
  h1: string;
  sub: string;
  p: string;
}

const { tag, className = "" } = Astro.props;

let Elements = tag || "div";
let classTails = className || "";

const styleBank: StyleBank = {
  h1: "font-black text-4xl lg:text-6xl ",
  h2: "text-heading-1 font-semibold text-2xl sm:text-3xl md:text-4xl",
  h3: "text-lg md:text-xl font-semibold text-heading-2",
  sub: "font-bold text-xl lg:text-2xl",
  p: "text-md lg:text-lg ",
};

function cssClasses() {
  if (classTails !== "") {
    return classTails;
  }

  return styleBank?.[tag];
}
---

<Elements class:list={[`text-heading-3`, cssClasses()]}>
  <slot />
</Elements>

<style>
  h1 {
    font-family: "Red Hat Display", sans-serif;
  }
</style>
