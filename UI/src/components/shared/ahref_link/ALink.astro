---
import { HiExternalLink } from "react-icons/hi";


interface Props {
  linkPath: string;
  class?: string;
  isExternal: boolean;
  children: any;
}
const { linkPath,isExternal, class: className, ...rest } = Astro.props;



---

<a 
target={isExternal ?"_blank" : false}
 rel={isExternal ?"noopener noreferrer" : false}
 
 
 class:list={[className, "internal_link"]} {...rest} href={linkPath}>
  <slot />
  
 {isExternal? <span class="icon_space"><HiExternalLink/></span> : null}

</a>
<style>
  .internal_link {
    display: flex;
    flex-wrap: nowrap;
    align-items: center;
    font-weight: 900;
  }

  .internal_link:hover {
    text-decoration: underline;
  }
  .icon_space{
    margin:0px  5px ;
  }
</style>
