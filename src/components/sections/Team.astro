---
import TeamCard from "../cards/TeamCard.astro";
import Container from "../shared/Container.astro";
import Title from "../shared/Title.astro";
import Paragraph from "../shared/Paragraph.astro";

---

<section id="about-us">
    <Container className="flex flex-col midmd:flex-row gap-10 lg:gap-12">
        <div class="flex-1 flex midmd:w-7/12 lg:w-1/2 flex-col">
            <div class="text-center max-w-3xl mx-auto space-y-4">
            <Title>
                the Lynx team
            </Title>
            <Paragraph>
                Professionals dedicated to improving your business & your brand.
            </Paragraph>
            </div>
            <div class="flex flex-col justify-center sm:flex-row gap-4r">
                <TeamCard 
                    description="An Ohio native, Matt specializes in frontend design, integrations, and emerging technology. He has 6 kids and a sheep named Copper." 
                    teamName="Matt Atterholdt"
                    primaryPicture="/images/matt_portrait.png"
                    secondaryPicture="/images/matt_portrait-news.png"
                    portfolioLink="https://www.matterholt.com/"
                    >
                </TeamCard>
                <TeamCard 
                    description="Joel is a former teacher and long-time web builder, specializing in creative design and business optimization. He'd love to play you at chess." 
                    teamName="Joel Mounts"
                    primaryPicture="/images/joel_portrait.png"
                    secondaryPicture="/images/joel_portrait-news.png"
                    portfolioLink="https://joelmounts.com/"
                    >
                </TeamCard>
            </div>
        </div>
    </Container>
</section>