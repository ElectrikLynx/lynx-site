---
import Button from "../shared/Button.astro";
import Container from "../shared/Container.astro";
---

<section class="relative pt-32 lg:pt-36">
    <Container className={"flex flex-col lg:flex-row gap-10 lg:gap-12"}>
        <div class="absolute w-full lg:w-1/2 inset-y-0 lg:right-0 ">
            <span class="absolute -left-6 md:left-4 top-24 lg:top-28 w-24 h-24 rotate-90 skew-x-12 rounded-3xl bg-green-400 blur-xl opacity-60 lg:opacity-95 lg:block hidden"></span>
            <span class="absolute right-4 bottom-12 w-24 h-24 rounded-3xl bg-primary blur-xl opacity-80"></span>
        </div>
        <span class="w-4/12 lg:w-2/12 aspect-square bg-gradient-to-tr from-primary to-green-400 absolute -top-5 lg:left-0 rounded-full skew-y-12 blur-2xl opacity-40 skew-x-12 rotate-90"></span>
        <div class="relative flex flex-col items-center text-center lg:text-left lg:py-7 xl:py-8 
        lg:items-start lg:max-w-none max-w-3xl mx-auto lg:mx-0 lg:flex-1 lg:w-1/2">
            
            <h1 class="text-3xl/tight sm:text-4xl/tight md:text-5xl/tight xl:text-6xl/tight
             font-bold text-heading-1">
             crafting  
             <span class="pink-buzz ">attractive</span> &     
             <span class="cyan-buzz">performant</span> websites.
            </h1>
            <div class="mt-10  w-full flex max-w-md mx-auto lg:mx-0">
                <div class="flex flex-col gap-5 w-full">
                        <Button variant={"primary"} className={"min-w-max text-white"} navigateTo={'#contact'}>
                            <span class=" sm:flex relative z-[5]">
                                Get Started
                            </span>
                        </Button>
                </div>
            </div>
        </div>

        <div class="flex flex-1 lg:w-1/2 lg:h-100 relative lg:max-w-none lg:mx-0 mx-auto max-w-3xl">
            <img src="/images/hero.webp" alt="Hero image" width="2350" height="2359" class="lg:absolute lg:w-full lg:h-full rounded-3xl object-contain lg:max-h-none max-h-96">
        </div>
    </Container>

    <!-- TODO: include down the road when we have a number of projects/clients to brag about -->
    <!-- <ByNumber/> -->
</section>

<style>
.pink-buzz {
  transform: rotate(-1deg);
  color: #ffd9e2;
  text-shadow: 0 0 0 transparent, 0 0 5px #ff003c,
    0 0 10px rgba(255, 0, 60, 0.5), 0 0 30px #ff003c, 0 0 40px #ff003c,
    0 0 50px #ff003c, 0 0 100px #ff003c, 0 0 200px #ff003c, 0 0 1000px #ff003c;
}

.cyan-buzz {
  transform: rotate(1deg);
  color: #d4eaff;
  text-shadow: 0 0 0 transparent, 0 0 10px #2695ff,
    0 0 20px rgba(38, 149, 255, 0.5), 0 0 40px #2695ff, 0 0 100px #2695ff,
    0 0 200px #2695ff, 0 0 300px #2695ff, 0 0 500px #2695ff;
}
</style>